# Database
DATABASE_URL="postgresql://username:password@localhost:5432/adry"
DIRECT_URL="postgresql://username:password@localhost:5432/adry"

# Authentication
AUTH_SECRET="your-super-secret-auth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# PayPal
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_WEBHOOK_ID="your_paypal_webhook_id"

# GCash Gateway (Xendit/PayMongo)
GCASH_GATEWAY_API_KEY="your_gcash_gateway_api_key"
GCASH_GATEWAY_SECRET="your_gcash_gateway_secret"
GCASH_GATEWAY_WEBHOOK_SECRET="your_gcash_webhook_secret"

# Cloudflare R2
R2_ACCESS_KEY_ID="your_r2_access_key_id"
R2_SECRET_ACCESS_KEY="your_r2_secret_access_key"
R2_BUCKET_NAME="adry-files"
R2_REGION="auto"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
R2_PUBLIC_URL="https://files.adry.com"

# Meilisearch
MEILISEARCH_HOST="https://your-meilisearch-instance.com"
MEILISEARCH_API_KEY="your_meilisearch_api_key"

# Email (Resend)
RESEND_API_KEY="re_your_resend_api_key"
FROM_EMAIL="noreply@adry.com"

# Monitoring
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_redis_token"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Adry"
NEXT_PUBLIC_APP_DESCRIPTION="Find trusted housekeepers in the Philippines"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DEBUG="true"
